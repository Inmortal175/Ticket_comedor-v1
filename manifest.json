{
  "manifest_version": 3,
  "name": "Getter Ticket comedor UNSCH",
  "version": "1.2",
  "author": "Figueroa Perez, Franklin",
  "description": "Descargar o imprimir Ticket del comedor UNSCH, para acceso por QR.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://intranet.unsch.edu.pe/alumno/tickets-comedor*",
    "https://intranet.unsch.edu.pe/alumno/notas*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://intranet.unsch.edu.pe/alumno/tickets-comedor*",
        "https://intranet.unsch.edu.pe/alumno/notas*"
      ],
      "js": [
        "libs/jsqr-1.0.3-min.js",
        "libs/qr-code-styling.min.js",
        "libs/html2canvas.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Ticket Printer-comedor UNSCH",
    "default_icon": "imgs/favicon16.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "libs/html2canvas.min.js",
        "scripts/ticketActions.js",
        "libs/jsqr-1.0.3-min.js",
        "libs/qr-code-styling.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "imgs/favicon16.png",
    "48": "imgs/favicon48.png"
  }
}
